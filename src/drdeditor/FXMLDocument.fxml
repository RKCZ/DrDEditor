                        <MenuItem fx:id="saveMI" onAction="#save" text="_Save" />
                        <MenuItem fx:id="loadMI" onAction="#load" text="_Open" />
                        <MenuItem fx:id="closeMI" onAction="#exit" text="Clo_se" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="true" text="E_dit" />
                <Menu mnemonicParsing="true" text="Hel_p">
                    <items>
                        <MenuItem fx:id="guideMI" onAction="#showGuide" text="Gu_ide" />
                        <MenuItem fx:id="aboutMI" onAction="#showAbout" text="Ab_out" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <TreeView fx:id="charInspectorTV" maxWidth="200.0" prefWidth="200.0" showRoot="false" BorderPane.alignment="CENTER">
            <cellFactory>
                <TreeDisplayCellFactory />
            </cellFactory>
        </TreeView>
    </left>
</BorderPane>
